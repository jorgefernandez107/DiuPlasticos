<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="prototipegs1.gestorsm.gs1.diuplasticos.Map">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Map"
            android:onClick="ViewPhoto"
            android:scaleType="centerCrop"
            android:src="@drawable/ubicacion2"
            android:visibility="visible" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/floatingActionButton3"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:onClick="newPhoto"
            android:scaleType="centerCrop"
            android:src="@drawable/plus"
            app:backgroundTint="@android:color/background_light"
            app:elevation="0dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignStart="@+id/sView"
            android:layout_below="@+id/sView"
            android:layout_marginTop="9dp"
            android:clickable="true"
            android:onClick="setClock"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_lock_idle_alarm"
            app:backgroundTint="@android:color/background_light"
            app:elevation="0dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignEnd="@+id/sView"
            android:layout_alignTop="@+id/floatingActionButton2"
            android:clickable="true"
            android:onClick="downloadData"
            android:scaleType="centerCrop"
            android:src="@drawable/arrowdown"
            app:backgroundTint="@android:color/background_light"
            app:elevation="0dp" />

        <SearchView
            android:id="@+id/sView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="#a1616161"
            android:orientation="horizontal" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/sView"
            android:layout_alignTop="@+id/sView"
            android:alpha="0"
            android:onClick="searchNewLocation"
            android:text="Button" />

    </RelativeLayout>

</LinearLayout>
