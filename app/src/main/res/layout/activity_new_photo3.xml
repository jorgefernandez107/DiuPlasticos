<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:gravity="top|center_vertical|center"
    android:orientation="vertical"
    tools:context="prototipegs1.gestorsm.gs1.diuplasticos.NewPhoto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="515dp"
            android:onClick="newPhoto"
            app:srcCompat="@drawable/takefoto2"
            tools:layout_editor_absoluteY="612dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView7"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:clickable="true"
            android:onClick="newPhoto"
            app:backgroundTint="@android:color/background_light"
            app:srcCompat="@android:drawable/ic_menu_camera"
            tools:layout_editor_absoluteX="173dp"
            tools:layout_editor_absoluteY="407dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:onClick="selectCoin"
            app:backgroundTint="@android:color/white"
            app:srcCompat="@drawable/coin" />

        <Button
            android:id="@+id/button12"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="19dp"
            android:background="@drawable/mybutton"
            android:onClick="back"
            android:text="volver" />

    </RelativeLayout>

</LinearLayout>

